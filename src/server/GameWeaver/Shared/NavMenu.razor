<MudNavMenu Margin="Margin.Dense" Color="Color.Primary" Bordered="true">
    <MudTooltip Text="Home" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
        <MudNavLink Href="@AppRouteConstants.Index" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.House" Style="width: 100%">
            Home
        </MudNavLink>
    </MudTooltip>
    @if (_canSeeHostsUi || _canViewGames || _canSeeGameServersUi)
    {
        <MudDivider Light="true" DividerType="DividerType.Middle"/>
        @if (_canSeeHostsUi)
        {
            <MudTooltip Text="Hosts Dashboard" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.GameServer.Hosts.HostsDashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Memory">
                    Hosts Dashboard
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canViewGames)
        {
            <MudTooltip Text="Games" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.GameServer.Games.ViewAll" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.SportsEsports">
                    Games
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canSeeGameProfilesUi)
        {
            <MudTooltip Text="Config Profiles" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.GameServer.GameProfiles.ViewAll" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DataObject">
                    Config Profiles
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canSeeGameServersUi)
        {
            <MudTooltip Text="Game Servers" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.GameServer.GameServers.ViewAll" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">
                    Game Servers
                </MudNavLink>
            </MudTooltip>
        }
    }
    @if (_canViewUsers || _canViewRoles || _canViewAuditTrails || _canViewTshootRecords)
    {
        <MudDivider Light="true" DividerType="DividerType.Middle"/>
        @if (_canViewUsers)
        {
            <MudTooltip Text="User Admin" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Admin.Users" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.SupervisorAccount">
                    User Admin
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canViewRoles)
        {
            <MudTooltip Text="Role Admin" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Admin.Roles" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PermContactCalendar">
                    Role Admin
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canViewAuditTrails)
        {
            <MudTooltip Text="Audit Trails" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Admin.AuditTrails" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.FormatListNumbered">
                    Audit Trails
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canViewTshootRecords)
        {
            <MudTooltip Text="Troubleshooting" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Admin.TroubleshootRecords" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Troubleshoot">
                    Troubleshooting
                </MudNavLink>
            </MudTooltip>
        }
    }
    @if (_canViewApi || _canViewJobs)
    {
        <MudDivider Light="true" DividerType="DividerType.Middle"/>
        @if (_canViewApi)
        {
            <MudTooltip Text="API" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Api.Root" Target="_blank" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Api">
                    API
                </MudNavLink>
            </MudTooltip>
        }

        @if (_canViewJobs)
        {
            <MudTooltip Text="Jobs Dashboard" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Jobs.Root" Target="_blank" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Outlined.WorkOutline">
                    Jobs Dashboard
                </MudNavLink>
            </MudTooltip>
        }
    }
    @if (_isDeveloper)
    {
        <MudDivider Light="true" DividerType="DividerType.Middle"/>
        @if (_isDeveloper)
        {
            <MudTooltip Text="Dev Testing" Placement="Placement.Right" Delay="_tooltipDelay" ShowOnHover="@(!ParentLayout._userPreferences.DrawerDefaultOpen)">
                <MudNavLink Href="@AppRouteConstants.Developer.Testing" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DeveloperMode">
                    Dev Testing
                </MudNavLink>
            </MudTooltip>
        }
    }
</MudNavMenu>