<MudAvatar Color="@AvatarColor" Variant="Variant.Outlined" Size="@AvatarSize" Style="@Style">
    @if (!string.IsNullOrWhiteSpace(ProfileImageUrl))
    {
        <MudImage Src="@ProfileImageUrl" Alt="Account Profile Avatar Image" />
    }
    else
    {
        @GetUsernameFromState()
    }
</MudAvatar>